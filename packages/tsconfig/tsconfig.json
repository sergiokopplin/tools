{
	"compilerOptions": {
    "lib": ["esnext"],
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "target": "es6",
    "allowJs": false,
    "pretty": true,
    "experimentalDecorators": true
	}
}
